<%= form_for(@link) do |f| %>
  <%= render 'shared/error_messages', :obj => @link %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br/>
  <%= f.label :url %>
  <%= f.text_field :url %>
  <br/>
  <%= f.label :description %>
  <%= f.text_area :description, rows: '2' %>
  <br/>
  <%= f.label :tag_list %>
  <%= f.text_field :tag_list %>
  <br/>
  <%= f.submit (@link.new_record? ? 'Add link!' : 'Update link'), class: 'btn', role: 'button' %>
  <%= link_to 'Cancel', :back %>
<% end %>