<% provide(:title, 'Add link')%>
<h1>Add a new link</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@link) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :title %>
      <%= f.text_field :title %>
      
      <%= f.label :url %>
      <%= f.text_field :url %>
      
      <%= f.label :description %>
      <%= f.text_area :description %>
      <br/>
      <%= f.submit "Add link!" %>
    <% end %>
  </div>
</div>