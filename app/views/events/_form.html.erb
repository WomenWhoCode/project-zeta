<%= form_for(@event) do |f| %>
  <%= render 'shared/error_messages', :obj => @event %>
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
  <br/>
  <%= f.label :description %>
  <%= f.text_area :description, rows: '2', class: 'form-control' %>
  <br/>
  <%= f.label :start_time %>
  <%= f.datetime_select :start_time, class: 'form-control' %>
  <br/>
  <%= f.label :duration %>
  <%= f.text_field :duration, class: 'form-control' %>
  <br/>
  <%= f.label :location %>
  <%= f.text_field :location, class: 'form-control' %>
  <br/>
  <%= f.label :tag_list %>
  <%= f.text_field :tag_list, class: 'form-control' %>
  <br/>
  <%= f.submit 'Add event!', class: 'btn btn-lg btn-primary', role: 'button' %>
<% end %>